Options +ExecCGI

# if you run tDiary with symbolic link, use settings below.
#Options +FollowSymLinks

# if making anchor style as 'YYYYMMDD.html', add some settings below.
# SEE header of html_anchor.rb plugin.

AddHandler cgi-script .rb
DirectoryIndex index.rb

<Files "*.rhtml*">
	deny from all
</Files>

<Files "tdiary.*">
	deny from all
</Files>

<Files update.rb>
	AuthName      tDiary
	AuthType      Basic
	AuthUserFile  /usr/src/app/.htpasswd
	Require user  wastepipe
</Files>

RewriteEngine on
RewriteRule ^([0-9\-]+)\.html$ /usr/src/app/index.rb?date=$1
